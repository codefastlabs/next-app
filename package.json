{
  "name": "next-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "db:down": "make database-down",
    "db:up": "make database-up",
    "dev": "next dev --turbopack",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "postinstall": "pnpm exec simple-git-hooks",
    "lint": "next lint --max-warnings 0",
    "lint:fix": "next lint --fix --max-warnings 0",
    "package:install": "pnpm install",
    "package:reinstall": "rm -rf node_modules .next pnpm-lock.yaml && pnpm install",
    "package:update": "pnpm update --latest --interactive",
    "playwright:install": "playwright install --with-deps",
    "playwright:show-report": "playwright show-report",
    "prettier": "prettier --check --ignore-unknown .",
    "prettier:fix": "prettier --write --ignore-unknown .",
    "serve": "next build && next start",
    "start": "next start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "commit-msg": "pnpm exec commitlint --edit $1"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-tailwindcss"
    ],
    "printWidth": 120,
    "singleQuote": true,
    "tailwindFunctions": [
      "tv"
    ]
  },
  "dependencies": {
    "@codefast/hooks": "0.2.4",
    "@codefast/ui": "0.2.4",
    "@hookform/resolvers": "3.9.1",
    "@next/env": "15.0.4",
    "@tanstack/react-query": "5.62.3",
    "@tanstack/react-query-devtools": "5.62.3",
    "@tanstack/react-table": "8.20.5",
    "@vercel/functions": "1.5.1",
    "consola": "3.2.3",
    "date-fns": "4.1.0",
    "jotai": "2.10.3",
    "lodash-es": "4.17.21",
    "lucide-react": "0.468.0",
    "next": "15.0.4",
    "next-themes": "0.4.4",
    "path-to-regexp": "8.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "7.54.0",
    "recharts": "2.14.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@codefast/eslint-config": "0.2.4",
    "@codefast/tailwind-config": "0.2.4",
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@playwright/test": "1.49.1",
    "@svgr/webpack": "8.1.0",
    "@tanstack/eslint-plugin-query": "5.62.1",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@types/jest": "29.5.14",
    "@types/lodash-es": "4.17.12",
    "@types/node": "22.10.1",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "eslint": "9.16.0",
    "eslint-config-next": "15.0.4",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.2.10",
    "postcss": "^8.4.49",
    "prettier": "3.4.2",
    "prettier-plugin-packagejson": "2.5.6",
    "prettier-plugin-tailwindcss": "0.6.9",
    "simple-git-hooks": "2.11.1",
    "tailwindcss": "3.4.16",
    "ts-node": "10.9.2",
    "typescript": "^5.7.2"
  }
}
