{
  "name": "next-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "postinstall": "pnpm exec simple-git-hooks",
    "lint": "next lint --fix --max-warnings 0",
    "lint:check": "next lint --max-warnings 0",
    "package:install": "pnpm install",
    "package:reinstall": "rm -rf node_modules .next pnpm-lock.yaml && pnpm install",
    "package:update": "pnpm update --interactive --recursive",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier:check": "prettier --check --ignore-unknown .",
    "start": "next start"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "commit-msg": "pnpm exec commitlint --edit $1"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-tailwindcss"
    ],
    "printWidth": 120,
    "singleQuote": true,
    "tailwindFunctions": [
      "tv"
    ]
  },
  "dependencies": {
    "next": "^14.2.15",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "lint-staged": "^15.2.10",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
